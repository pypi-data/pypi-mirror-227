[Unit]
Description="{{ brik_name }}-redis-cache"
PartOf={{ brik_name }}-redis.target

[Service]
User={{ user }}
Group={{ user }}
Restart=always
ExecStart={{ redis_server }} {{ redis_cache_config }}
StandardOutput=file:{{ brik_dir }}/logs/redis-cache.log
StandardError=file:{{ brik_dir }}/logs/redis-cache.error.log
WorkingDirectory={{ sites_dir }}
